{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"greasemonkey": true
	},
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"globals": {
		"GM.setValue": "readonly",
		"GM.getValue": "readonly",
		"GM.addStyle": "readonly",
		"GM.xmlHttpRequest": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-nested-ternary": "error",
		"no-await-in-loop": "error",
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 4,
				"printWidth": 100
			}
		]
	}
}
